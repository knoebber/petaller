<h1>Item <%= @item.id %></h1>

<section class="p-4 w-100 window">
  <div>
    <%= @item.description %>
  </div>
  <div>
    Completed: <%= @item.completed_at %>
  </div>
  <div>
    Created: <%= @item.inserted_at %>
  </div>
</section>
<section class="lg:w-1/2 md:w-full window mt-2 mb-2">
  <%= form_for @changeset, Routes.items_path(@conn, :create_entry, @item.id), [class: "p-4"], fn f -> %>
    <div class="flex flex-col">
      <label>Content</label>
      <%= text_input f, :content %>
    </div>
    <div>
      <%= submit "Submit", class: "bg-purple-300 p-2 rounded" %>
    </div>
  <% end %>
</section>
<%= for entry <- @item.entries do %>
  <section class="lg:w-1/2 md:w-full window mt-2 mb-2 p-4">
    <%= entry.content %>
    <div>
      <i>
        <%= entry.inserted_at %>
      </i>
    </div>
  </section>
<% end %>
