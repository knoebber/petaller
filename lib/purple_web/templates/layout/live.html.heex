<div class="content-flex">
  <nav>
    <%= for link <- @side_nav || [] do %>
    <.link navigate={link.to}><%= link.label %></.link>
      <%= if Map.has_key?(link, :children) and length(link.children) > 0 do %>
        <div class="side-link-group">
          <%= for child <- link.children do %>
            <.link navigate={child.to}><%= child.label %></.link>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </nav>
  <main>
    <p class="flash flash-info" role="alert" phx-click="lv:clear-flash" phx-value-key="info"><%= live_flash(@flash, :info) %></p>
    <p class="flash flash-error" role="alert" phx-click="lv:clear-flash" phx-value-key="error"><%= live_flash(@flash, :error) %></p>
    <%= @inner_content %>
  </main>
</div>
